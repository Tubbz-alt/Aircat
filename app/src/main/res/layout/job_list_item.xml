            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_item_pmkid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PMKID: 1f02aa3d48e4fef4c2b5f1a1aad06176"
